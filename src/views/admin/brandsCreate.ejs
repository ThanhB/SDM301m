<%- include('./layouts/headerAdmin') %>
<link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
/>
<style>
  body,
  html {
    height: 100%;
    margin: 0;
  }
  .page-container {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }
  .content-wrap {
    flex: 1;
  }
  .footer {
    margin-top: auto;
  }
  input[type="text"],
  select {
    width: 550px; /* Adjusted the comment to match the width */
  }
</style>
<div class="page-container bg-gray-100">
  <div class="content-wrap">
    <div class="container py-28 flex align-middle items-center flex-col">
      <h3 class="mb-4">Brand</h3>
      <form action="/admin/brand/create" method="post">
        <div class="mb-3">
          <label for="brandName" class="form-label">Brand Name:</label>
          <input
            type="text"
            class="form-control"
            id="brandName"
            name="brandName"
            placeholder="Enter brand name"
            required
          />
        </div>
        <div class="space-x-4">
          <button class="btn btn-primary" type="submit">Add Brand</button>
          <button class="btn btn-primary">
            <a href="/admin/brands" class="text-white">Back to Brand</a>
          </button>
        </div>
      </form>
    </div>
  </div>
  <div class="footer"><%- include('./layouts/Footler') %></div>
</div>
