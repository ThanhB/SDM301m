<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Watch Store VN</title>
    <link href="https://unpkg.com/tailwindcss@^1.0/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
    <%- include('./layouts/header') %>
    <div class="container mx-auto mt-5 px-4">
        <h1 class="text-center text-3xl font-bold mb-4">Watches</h1>
        <!-- Search and Filter Form -->
        <form id="searchForm" class="mb-4" method="GET" action="/home">
          <div class="flex flex-wrap -mx-3">
            <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
              <input
                type="text"
                id="searchInput"
                name="query"
                class="appearance-none block w-full bg-gray-200 text-gray-700 border rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white"
                placeholder="Search for watches..."
                value="<%= typeof query !== 'undefined' ? query : '' %>"
              />
            </div>
            <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
              <select id="brandFilter" name="brand" class="block appearance-none w-full bg-gray-200 border border-gray-200 text-gray-700 py-3 px-4 pr-8 rounded leading-tight focus:outline-none focus:bg-white focus:border-gray-500">
                <option value="">All Brands</option>
                <!-- Loop through your brands and create options -->
                <% brands.forEach(brand => { %>
                <option value="<%= brand._id %>" <%= brand._id.toString() === selectedBrand ? 'selected' : '' %>><%= brand.brandName %></option>
                <% }); %>
              </select>
            </div>
            <div class="w-full md:w-1/3 px-3 mb-6 md:mb-0">
              <button type="submit" class="w-full shadow bg-blue-500 hover:bg-blue-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded">Search</button>
            </div>
          </div>
        </form>
        <div class="flex flex-wrap -mx-4">
          <!-- Loop through your watches and display them -->
          <% watches.forEach(watch => { %>
            <div class="w-full md:w-1/3 px-4 mb-4 h-full">
              <div class="flex flex-col bg-white rounded-lg shadow-md overflow-hidden h-full">
                <div class="w-full h-64 overflow-hidden">
                  <img
                    src="<%= watch.image %>"
                    class="w-full h-full object-cover"
                    alt="<%= watch.watchName %>"
                  />
                </div>
                <div class="p-4 flex-grow">
                  <h5 class="text-md font-bold mb-2"><%= watch.watchName %></h5>
                  <p class="text-gray-700"><strong>Brand:</strong> <%= watch.brand.brandName %></p>
                  <p class="text-gray-700"><strong>Price:</strong> <%= watch.price %></p>          
                  <!-- Add more details you want to display -->
                </div>
              </div>
            </div>
          <% }); %>
        </div>
      </div>
    <%- include('./layouts/Footler') %>
</body>
</html>