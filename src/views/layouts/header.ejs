<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Watch</title>
    <link
      href="https://unpkg.com/tailwindcss@^2.0/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <script>
      // Function to toggle the dropdown
      function toggleDropdown() {
        const dropdown = document.getElementById('dropdown');
        dropdown.classList.toggle('hidden');
      }
    </script>
  </head>
  <body>
    <div class="bg-green-600 p-5 flex justify-between items-center">
      <div class="space-x-6">
        <a href="/" class="text-2xl font-bold text-white ml-40">Watchvn</a>
        <a href="/" class="text-white">Home</a>
      </div>
      <div>
        <% if (typeof membername !== 'undefined' && membername && membername !==
        'Guest') { %>
        <div class="dropdown">
          <a onclick="toggleDropdown()" class="inline-block text-white no-underline hover:text-gray-800 hover:text-underline py-2 px-4 cursor-pointer"><i class="fas fa-user"></i> <%= membername %></a>
          <div id="dropdown" class="absolute hidden bg-white shadow-md mt-2">
            <a href="/userprofile" class="block px-4 py-2 text-black hover:bg-gray-200">Profile</a>
            <% if (isAdmin === true) { %>
            <a href="/admin/dashboard" class="block px-4 py-2 text-black hover:bg-gray-200">Dashboard</a>
            <% } %>
            <a href="/logout" class="block px-4 py-2 text-black hover:bg-gray-200">Logout</a>
          </div>
        </div>
        <% } else { %>
        <a href="/login" class="text-white">Login</a>
        <% } %>
      </div>
    </div>
  </body>
</html>
